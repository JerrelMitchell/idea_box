<h1><%= current_user.name %>'s Ideas</h1>

<h3>You have <%= @ideas.size %> Ideas!</h3>
<ul>
  <% @ideas.each do |idea| %>
    <p><%= link_to "#{idea.title}", user_idea_path(current_user, idea) %></p>
    <p><%= idea.content %></p>
    <li><%= link_to 'Edit', edit_user_idea_path(current_user, idea) %></li>
    <li><%= link_to 'Delete', user_idea_path(current_user, idea), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>
<br>
