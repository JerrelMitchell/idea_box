<!DOCTYPE html>
<html>
  <head>
    <title>IdeaBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user.nil? %>
    <% render 'layouts/navbar' %>
    <%= yield :navbar %>
    <% else %>
    <% render 'layouts/navbar' %>
    <%= yield :visitor_navbar %>
    <% end %>
    <%= yield %>
  </body>
</html>
